<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/MyriadTextViewStyle</item>
        <item name="android:buttonStyle">@style/MyriadButtonStyle</item>
    </style>

    <!--Fonts for textview and button -->
    <style name="MyriadTextViewStyle" parent="android:Widget.TextView">
        <item name="fontPath">myriad-pro.ttf</item>
    </style>

    <style name="MyriadButtonStyle" parent="android:Widget.Material.Button">
        <item name="fontPath">myriad-pro.ttf</item>
    </style>

    <!--Divider Theme -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorTrueGray</item>
    </style>

    <!--Small divider as underline-->
    <style name="SmallDivider">
        <item name="android:layout_width">75sp</item>
        <item name="android:layout_height">4sp</item>
        <item name="android:background">@color/colorTrueSecondary</item>
    </style>
</resources>